{% block title -%} {{ "New Contact"|trans }} {% endblock -%}

{% block paragraph -%}
    {{ "Site manager"|trans ~ "," }}<br/><br/>
    {{ "You received a new contact through the Contact form."|trans }}<br/>
{% endblock -%}

