{% if locations|length > 0 %}
    <section class="block-background-map">
        <div class="container">
            <h2 class="theme-title theme-title-centered">{{ 'Explore more places'|trans }}</h2>

            <div class="row">
                <div class="col-sm-offset-1 col-sm-10">
                    <div class="theme-box theme-box-bg">
                        <div class="theme-box-content">
                            <div class="list-columns">
                                <ul class="list-unstyled">
                                    {% for location in locations -%}
                                        {% set link = url("global_search_1", {a0: (location.friendly_url|split('/')|last)}) -%}
                                        <li>
                                            <a href="{{ link }}">{{ location.title }}</a>
                                        </li>
                                    {% endfor -%}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <br>
                <a href="{{ url(route) }}" class="btn btn-success btn-long">{{ 'more locations'|trans }}</a>
            </div>
        </div>
    </section>
{% endif %}
