<div class="container well well-light">

    <h2 class="theme-title">{{ "Browse by category "|trans }} <span class="pull-right view-more"><a href=" {{ url(all) }} ">{{ 'more categories'|trans }}</a></span></h2>

    <div class="flex flex-container col-xs-12">
        {% for category in categories.featured -%}
            <div class="flex-unit theme-box theme-box-expanded col-sm-2 col-xs-6">
                <div class="theme-box-content">
                    {% if category.image.id != 0 -%}
                        <a href="{{ url("global_search_1", {"a0" : category.friendlyURL} ) }}">
                            <img class="img-responsive" src="{{ asset(imagePath(category.image), 'domain_images') | imagine_filter('small') }}" alt="{{ category.title }}">
                        </a>
                    {% else -%}
                        <a href="{{ url("global_search_1", {"a0" : category.friendlyURL} ) }}" title="{{ category.title }}">
                            {{ utility_getNoImage(category.title) }}
                        </a>
                    {% endif -%}
                    <h5 class="text-center"><a href="{{ url("global_search_1", {"a0" : category.friendlyURL} ) }}">{{ category.title }} ({{ attribute(category, 'get' ~ activeItemsNameField|capitalize ) }})</a></h5>
                </div>
            </div>
        {% endfor -%}
    </div>

    {% if categories.regular is not empty -%}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-xs-12">

            <div class="list-columns theme-box theme-box-expanded text-center">
                <ul class="list-unstyled ">
                    {% for category in categories.regular -%}
                        {#<li><b><a class="text-primary" href="{{ url(route)~category.friendlyURL }}">{{ category.title }}</a></b></li>#}
                        <li><a class="text-primary" href="{{ url("global_search_1", {"a0" : category.friendlyURL} ) }}">{{ category.title }}  ({{ attribute(category, 'get' ~ activeItemsNameField|capitalize ) }})</a></li>
                    {% endfor -%}
                </ul>
            </div>
        </div>
    </div>
    {% endif -%}

</div>
