<!-- Background image -->
<span class="bg-image">
    <span class="cover-bg-image" style="
    {% if file_exists(getDomainParameter('path') ~ 'content_files/background_image.jpg') -%}
        background-image: url({{ asset(getDomainParameter('path') ~ 'content_files/background_image.jpg') }});
    {% else -%}
        background-image: url({{ asset('assets/images/bg-image.png') }});
    {% endif -%}
    "></span>
</span>
<!-- End  Background image -->
