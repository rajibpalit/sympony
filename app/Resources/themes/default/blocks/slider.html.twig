{# Slider Carousel -#}
<div id="carousel-example" class="carousel slide" data-ride="carousel">


    <!-- Wrapper for slides -->
    <div class="carousel-inner hidden-xs" role="listbox">

        {% for slider in sliders -%}
            <div class="item item-expanded {{ loop.first ? 'active' : '' }}" style="background-image:url({{ asset(imagePath(slider.image), 'domain_images') }})" ></div>
        {% endfor -%}

        {#  Indicators  -#}
        {% if sliders|length > 1 -%}
        <ol class="carousel-indicators hidden-xs">
            {% for slider in sliders -%}
                <li data-target="#carousel-example" data-slide-to="{{ loop.index0 }}"
                    class="{{ loop.first ? 'active' : '' }}">
                </li>
            {% endfor -%}
        </ol>
        {% endif -%}

        {% if sliders is empty -%}
                <div class="item item-expanded active"

                {% if file_exists(getDomainParameter('path') ~ 'content_files/background_image.jpg') -%}
                     style="background-image:url({{ asset(getDomainParameter('path') ~ 'content_files/background_image.jpg') }});"
                {% else -%}
                     style="background-image:url({{ asset('assets/images/bg-image.png') }});"
                {% endif -%}
                >
            </div>
        {% endif -%}

    </div>

</div>
{# Slider End -#}

