{% extends '::base.html.twig' -%}

{% block SEO %}
    {{ generateSEOFromContent( customContentDealHome(true), "%module% Homepage"|trans({"%module%" : "Deal"|trans}) ) }}
{% endblock -%}

{% block topbanner -%}
    {{ banners.top("deal") }}
{% endblock -%}

{% block subheader -%}
    {% set contentTop =  customContentDealHome(true) %}
    {# Top Search -#}
    <section class="top-search ">

        {# General Background Image -#}
        {{ include("::blocks/background-image.html.twig") }}

        <div class="well well-translucid">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-4 col-sm-12 text-center-sm">
                        <br>
                        <h1>{{ contentTop.title }} </h1>
                    </div>
                    <div class="col-lg-7 col-md-8 col-sm-12">
                        <div id="search-responsive" class="search-collapse collapse">
                            <div class="well well-translucid form-inline text-center">
                                {{ addJSTwigParameter("searchBoxModule", "deal") }}
                                {{ include("::blocks/search/search-fields-small.html.twig") }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock -%}

{% block body -%}

    {% import "::blocks/utility/banners.html.twig" as banners %}

    <main>

        {# Must Read Articles -#}
        <section class="block">
            <div class="container">
                {% set contentTop =  customContentDealHome(true) %}
                {{ contentTop.content|raw }}
                <br>
                <h2 class="theme-title">{{ 'Specials Deals'|trans }}</h2>

                <div class="row">
                    {{ specialsDeal(3, 'col-sm-4') }}
                </div>
            </div>
        </section>


        {# Popular Deals -#}
        <!-- Popular Deals -->
        <section class="block">
            <div class="container">
                <h2 class="theme-title">{{ 'New Deals'|trans }}
                </h2>

                <div class="row">
                    {{ newDeal(4, 'col-sm-6', 'horizontal') }}
                </div>
                {{ customContentDealHomeBottom() }}
            </div>
        </section>

        {{ banners.middle("deal") }}

        {# Browse By Location -#}
        <section class="block block-background-map">
            {{ browseByLocationDeal(60) }}
        </section>


    </main>
{% endblock -%}

{% block bottombanners -%}
    {% import "::blocks/utility/banners.html.twig" as banners %}
    {{ banners.bottom("deal") }}
{% endblock -%}
