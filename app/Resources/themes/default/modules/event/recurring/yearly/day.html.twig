{# @var event \ArcaSolutions\EventBundle\Entity\Event -#}

{# Every day <day>> of <month> -#}
{% if 'en_US' == location -%}
    {# creates a fake date just for to get the month's name -#}
    {{ date('2015-'~event.month~'-1')|localized_date('MMMM') }}

    {# ordinalize the day just for english -#}
    {{ ordinalize(event.day) }}

    {# string for yearly -#}
    {{ 'Every Year'|trans }}
{% else -%}
    {# non english language -#}
    {{ 'Day'|trans }} {{ event.day }}
    {{ 'Of' }}
    {# creates a fake date just for to get the month's name -#}
    {{ date('2015-'~event.month~'-1')|localized_date('MMMM') }}
{% endif -%}
