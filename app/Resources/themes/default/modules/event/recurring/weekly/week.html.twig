{% if all_days -%}
    {{ 'Every Day'|trans }}
{% elseif weekend -%}
    {{ 'Every weekend'|trans }}
{% elseif business_days -%}
    {{ 'Mon-Fri'|trans }}
{% else -%}
    {% for day in days -%}
        {% if loop.length > 1 and loop.last %} {{ 'and'|trans }} {% endif -%}
        {{ day|day_name -}}
        {% if loop.length > 2 and (loop.length - loop.index) > 1 -%}
            {{ ',' }}
        {% endif -%}
    {% endfor -%}
{% endif -%}
